<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update a post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/updatePost.css">
</head>
<body class="custom-font">
    <%- include("partials/header.ejs") %>
    <div class="container">
        <div class="row mt-5">
            <div class="col text-center">
                <h1>Choose a post to update</h1>
            </div>
        </div>
        <div class="row justify-content-center mt-5">
            <div class="col-4">
                <div class="d-flex flex-wrap justify-content-center">
                <% if (locals.blogPost) { %>
                    <% for(var i = 0; i < blogPost.length; i++) {%>
                        <form action="/updatePost" method="post">
                            <input type="hidden" name="postTitle" value="<%= blogPost[i].title %>">
                            <button type="submit" class="m-1 btn btn-dark"><%= blogPost[i].title %></button>
                        </form>
                    <% } %>
                <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="container">
        <div class="row pt-5 justify-content-center">
            <div class="col-4 text-right">
                <% if (locals.revPost) { %>
                <div>
                    <form action="/swapPost" method="post" name="revForm">
                        <!-- Using hidden value to send back to the backend to be removed when the updated version is added -->
                        <input type="hidden" name="postTitle" value="<%= postTitle %>">
                        <input type="text" name="title" class="mb-1 form-control" value="<%= revPost.title %>">
                        <textarea name="content" id="body-box" class="form-control" value=""><%= revPost.content %></textarea><br>
                        <input type="submit" class="btn btn-light">
                    </form>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
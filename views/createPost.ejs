<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/createPost.css">
    <!-- Alert message if duplicate title is inputed -->
    <% if (locals.showPopup) { %>
        <script>
            function showPopup(message) {
                alert(message);
            }
            window.onload = () => {
                const message = '<%= message %>';
                if (message) {
                    showPopup(message);
                }
            };
        </script>
    <% } %>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
        <div class="row pt-5">
            <div class="col text-center">
                <h1>Create a Post</h1>               
            </div>
            <div class="row pt-5 justify-content-center">
                <div class="col-4 text-right">
                    <form action="/submitPost" onsubmit="myFunction()" method="post">
                        <input type="text" class="mb-1 form-control" id="title-box" name="title" placeholder="Title"><br>
                        <textarea name="content" class="form-control" id="body-box" placeholder="Tell me something..."></textarea><br>
                        <input type="submit" class="btn btn-light">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>